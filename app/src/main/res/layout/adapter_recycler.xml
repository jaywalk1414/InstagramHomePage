<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#FF000000"
            android:layout_marginStart="9dp"
            />

        <TextView
            android:id="@+id/textPersonId"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingLeft="2dp"
            android:text="test"
            android:textColor="#000000"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewPost"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="#FAF8F8"
                android:drawableTop="@drawable/ic_favorite_border_black_24dp"
                android:drawableTint="#3C3B3B"
                android:scaleX="1.2"
                android:scaleY="1.2" />
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="#FAF8F8"
                android:drawableTop="@drawable/ic_chat_bubble_outline_black_24dp"
                android:drawableTint="#3C3B3B"
                android:scaleX="1.2"
                android:scaleY="1.2" />
            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="#FAF8F8"
                android:drawableTop="@drawable/ic_send_black_24dp"
                android:drawableTint="#3C3B3B"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:gravity="bottom"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:background="#FAF8F8"
                    android:drawableTop="@drawable/ic_bookmark_border_black_24dp"
                    android:drawableTint="#3C3B3B"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginRight="10dp"
                    android:paddingTop="3dp"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:paddingTop="1dp">

            <TextView
                android:id="@+id/textPersonId2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:paddingLeft="5dp"
                android:text="alo_test"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textCaption"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:paddingLeft="9dp"
                android:text="Instagram"
                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>